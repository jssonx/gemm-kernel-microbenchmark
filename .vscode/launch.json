    "version": "0.2.0",
    "configurations": [
        {
            "name": "CUDA C++: Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/csrc/bench/main",
            "stopAtEntry": true,
            "args": [
                "--groups=3",
                "--m=8",
                "--n=8",
                "--k=8",
                "--iterations=3",
            ],
        },
        {
            "name": "CUDA C++: Attach",
            "type": "cuda-gdb",
            "request": "attach"
        }
    ]
}